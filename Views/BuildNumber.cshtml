@{
    string buildNumber = null;
    string buildLink = null;
}

@* If the placeholder value wasn't replaced, then it doesn't need to be displayed. *@
@if (!string.IsNullOrEmpty(buildNumber) || !string.IsNullOrEmpty(buildLink))
{
    Style.Require("Lombiq.Hosting.Deployments.BuildNumber.Admin");
    buildNumber = buildNumber ?? buildLink;
    
    <div id="lombiq-hosting-deployments-buildnumber">@T("Build: {0}", Html.LinkOrDefault(buildNumber, buildLink))</div>
}